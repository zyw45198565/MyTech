<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp">
        <ImageView
            android:id="@+id/want_add_friend_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:src="@drawable/common_nav_btn_back_n_xhdpi"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:text="添加好友"/>
        <TextView
            android:id="@+id/want_add_friend_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:text="发送"
            android:layout_marginRight="18dp"/>
    </RelativeLayout>
    <View
        android:layout_marginTop="@dimen/dip_10"
        android:layout_width="match_parent"
        android:layout_height="1dp"
       android:background="#ccc" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="28dp"
        android:layout_height="77dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/want_add_friend_icon"
            android:layout_width="77dp"
            android:layout_height="match_parent"

            app:roundAsCircle="true"/>
        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="15dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/want_add_friend_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#333333"
                android:text="昵称"/>
            <TextView
                android:id="@+id/want_add_friend_signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_alignParentBottom="true"
                android:text="签名"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textSize="14sp"
        android:layout_marginLeft="12dp"
        android:textColor="#666666"
        android:text="申请备注"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:layout_height="48dp">
        <EditText
            android:id="@+id/want_add_friend_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginLeft="12dp"
            android:textSize="14sp"
            android:textColor="#333333"
            />
    </LinearLayout>
</LinearLayout>
