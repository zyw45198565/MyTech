<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hyphenate="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:background="#f2f2f2">
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:layout_marginTop="30dp">
      <ImageView
          android:id="@+id/group_member_back"
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:layout_marginLeft="20dp"
          android:src="@drawable/common_nav_btn_back_n_xhdpi"
          android:layout_centerVertical="true"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:textSize="20sp"
          android:text="群管理"/>
      <ImageView
          android:id="@+id/group_member_add"
          android:layout_width="24dp"
          android:layout_height="24dp"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
         android:src="@drawable/community_btn_add_n_xhdpi"
          android:layout_marginRight="18dp"/>

   </RelativeLayout>
   <LinearLayout
       android:layout_marginTop="10dp"
       android:layout_width="match_parent"
       android:layout_height="52dp"
       android:background="#ffffff"
       android:gravity="center">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_margin="10dp"
          android:background="@drawable/linear_group_member_shape"
          android:gravity="center_vertical"
          android:layout_height="32dp">
         <ImageView
             android:layout_width="20dp"
             android:layout_height="20dp"
             android:layout_marginLeft="5dp"
             android:src="@drawable/common_nav_btn_search_n_xhdpi"/>
         <EditText
             android:id="@+id/group_member_search_edit"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@null"
             android:hint="搜索"
             android:textSize="18sp"
             />
      </LinearLayout>
   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_marginTop="4dp"
       android:background="#ffffff"
       android:orientation="vertical"
       android:layout_height="wrap_content">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="30dp"
          android:gravity="center"
          android:textColor="#333333"
          android:layout_marginLeft="12dp"

          android:text="群主"/>
      <android.support.v7.widget.RecyclerView
          android:id="@+id/group_member_recycle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_marginTop="4dp"
       android:background="#ffffff"
       android:orientation="vertical"
       android:layout_height="wrap_content">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="30dp"
          android:gravity="center"
          android:textColor="#333333"
          android:layout_marginLeft="12dp"

          android:text="管理员"/>
      <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
          android:id="@+id/group_member_swipe_one"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>
   </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_marginTop="4dp"
       android:background="#ffffff"
       android:orientation="vertical"
       android:layout_height="wrap_content">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="30dp"
          android:gravity="center"
          android:textColor="#333333"
          android:layout_marginLeft="12dp"

          android:text="群成员"/>
      <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
          android:id="@+id/group_member_swipe_two"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"/>
   </LinearLayout>
</LinearLayout>