<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical"
    tools:context=".activity.VipActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:padding="12dp"
        android:paddingBottom="15dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="开通会员"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <CheckBox
            android:id="@+id/year"
            android:layout_width="129dp"
            android:layout_height="53dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/vip_border"
            android:button="@null"
            android:drawableLeft="@drawable/year"
            android:gravity="center"
            android:padding="15dp"
            android:text="年VIP" />

        <CheckBox
            android:id="@+id/quarter"
            android:layout_width="129dp"
            android:layout_height="53dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/vip_border"
            android:button="@null"
            android:drawableLeft="@drawable/quarter"
            android:gravity="center"
            android:padding="15dp"
            android:text="季VIP" />

        <CheckBox
            android:id="@+id/month"
            android:layout_width="129dp"
            android:layout_height="53dp"
            android:layout_below="@id/year"
            android:layout_marginTop="20dp"
            android:background="@drawable/vip_border"
            android:button="@null"
            android:drawableLeft="@drawable/month"
            android:gravity="center"
            android:padding="15dp"
            android:text="月VIP" />

        <CheckBox
            android:id="@+id/week"
            android:layout_width="129dp"
            android:layout_height="53dp"
            android:layout_below="@id/year"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/vip_border"
            android:button="@null"
            android:drawableLeft="@drawable/week"
            android:gravity="center"
            android:padding="15dp"
            android:text="周VIP">

        </CheckBox>

        <View
            android:layout_width="match_parent"

            android:layout_height="1dp"
            android:layout_below="@id/month"
            android:layout_marginTop="20dp"
            android:background="#f2f2f2" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:background="#fff"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所需积分："
            android:textColor="#666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/t_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10分"
            android:textColor="#ff5757"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:background="#fff"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的积分："
            android:textColor="#666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/my_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120分"
            android:textColor="#ff5757"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/convert"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/red_shape"
        android:gravity="center"
        android:text="立即兑换"
        android:textColor="#fff"
        android:textSize="20sp" />
</LinearLayout>