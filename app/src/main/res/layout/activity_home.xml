<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mdraw"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/mlinearhome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <RadioGroup
        android:id="@+id/rg"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb1"
            android:button="@null"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="资讯"
            android:padding="5dp"
            android:drawableTop="@drawable/informationsel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/rb2"
            android:button="@null"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="消息"
            android:padding="5dp"
            android:drawableTop="@drawable/messagesel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <RadioButton
            android:id="@+id/rb3"
            android:button="@null"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="社区"
            android:padding="5dp"
            android:drawableTop="@drawable/communitysel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:background="@drawable/mybeijing">

        <RelativeLayout
            android:id="@+id/rl1"
            android:background="#80ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true">


                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/log"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:adjustViewBounds="true"
                    app:placeholderImage="@drawable/log_icon"
                    app:placeholderImageScaleType="centerCrop"
                    app:roundAsCircle="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@+id/log"
                    android:text="登录/注册"
                    android:textColor="#fff"
                    android:textSize="14sp" />


            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
