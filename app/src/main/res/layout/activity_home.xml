<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/mdraw"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/mlinearhome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <RadioGroup
        android:id="@+id/rg"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb1"
            android:button="@null"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="资讯"
            android:padding="5dp"
            android:drawableTop="@drawable/informationsel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/rb2"
            android:button="@null"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="消息"
            android:padding="5dp"
            android:drawableTop="@drawable/messagesel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <RadioButton
            android:id="@+id/rb3"
            android:button="@null"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="社区"
            android:padding="5dp"
            android:drawableTop="@drawable/communitysel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:background="@drawable/mybeijing">

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
