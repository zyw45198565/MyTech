<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#f2f2f2">
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/group_longtime"
        android:layout_width="80dp"
        android:layout_height="26dp"
        android:text="2.30"
        android:textSize="14sp"
        android:textColor="#333333"
        android:gravity="center"
        android:background="#d7d7d7"
        android:layout_gravity="center"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/list_r_shape">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/group_sdv_t1"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:background="@mipmap/ic_launcher"
            />
        <TextView
            android:id="@+id/group_tv_name1"
            android:layout_toRightOf="@+id/group_sdv_t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:text="张大米"/>

        <TextView
            android:id="@+id/group_tv_request1"
            android:layout_below="@+id/group_sdv_t1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#333333"
            android:text="邀请你加入知识竞赛群"
            />

        <LinearLayout
            android:layout_below="@+id/group_tv_request1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/group_agree1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="38dp"
                android:text="同意"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="14sp"
                android:background="#20affa"/>
            <TextView
                android:id="@+id/group_jujue1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="38dp"
                android:text="拒绝"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:gravity="center"
                android:background="#ff5757"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>