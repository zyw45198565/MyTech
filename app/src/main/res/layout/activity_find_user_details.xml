<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activity.CreateFriendActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:background="@drawable/user_details_xhdpi"
            />
        <ImageView
            android:id="@+id/user_details_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/common_nav_btn_back_n_xhdpi"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/user_details_icon"
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            app:roundAsCircle="true"
            android:layout_marginBottom="10dp"
            />
        <LinearLayout
            android:id="@+id/user_details_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="206dp"
            android:layout_toRightOf="@+id/user_details_icon">
            <TextView
                android:id="@+id/user_details_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="20sp"
                android:text="姓名"
                />
            <TextView
                android:id="@+id/user_details_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="积分"
                android:textSize="10sp"
                android:layout_marginLeft="6dp"
                android:textColor="#ff5552"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/user_details_whetherVip"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/vip11"
            android:layout_below="@+id/user_details_linear"
            android:layout_toRightOf="@+id/user_details_icon"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="5dp"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/user_details_signature"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="签名"
        android:textColor="#999999"
        android:textSize="14sp"/>
       <LinearLayout
           android:layout_width="240dp"
           android:layout_marginTop="64dp"
           android:layout_height="wrap_content"
           android:gravity="center_vertical">
           <TextView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:text=" - - - - - - - - - - - -"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="个人资料"
               android:textSize="12sp"
               android:textColor="#333333"/>
           <TextView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:text=" - - - - - - - - - - - -"
               />
       </LinearLayout>
    <TextView
        android:id="@+id/user_details_sex"
        android:layout_width="wrap_content"
        android:layout_marginTop="14dp"
        android:textSize="12sp"
        android:textColor="#333333"
        android:text="性别"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/user_details_phone"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:textColor="#333333"
        android:text="电话"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/user_details_email"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        android:textColor="#333333"
        android:text="电话"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/user_details_yes"
        android:layout_width="336dp"
        android:layout_height="40dp"
        android:layout_marginTop="114dp"
        android:text="添加好友"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:background="@drawable/but_add_shape"
        />
</LinearLayout>