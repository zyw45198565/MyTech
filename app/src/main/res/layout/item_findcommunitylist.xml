<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/communitylist_head_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/comminitylist_head"
                fresco:roundAsCircle="true"
                android:layout_marginLeft="2dp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">
                    <TextView
                        android:id="@+id/communitylist_nick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="球事"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_marginRight="20dp"/>
                    <TextView
                        android:id="@+id/communitylist_time"
                        android:text="3分钟前"
                        android:textColor="#999999"
                        android:layout_toRightOf="@+id/communitylist_nick"
                        android:textSize="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/communitylist_signature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我只关心"
                        android:layout_marginTop="14dp"
                        android:layout_below="@+id/communitylist_nick"
                        android:textSize="10sp"
                        android:textColor="#999999"/>

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/communitylist_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:textColor="#666666"
            android:text="特例推移：时间简史静静地"
            android:layout_marginLeft="2dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/communitylist_picter_rlv"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="2dp">
            <LinearLayout
                android:id="@+id/communitylist_layout_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toLeftOf="@+id/communitylist_layout_right"
                android:gravity="center">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/communitylist_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/community_icon_comment_btn"
                    />
                <TextView
                    android:id="@+id/communitylist_comment_text"
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="134"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/communitylist_layout_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_alignParentRight="true">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/communitylist_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/community_icon_like_false" />
                <TextView
                    android:id="@+id/communitylist_like_text"
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1340"/>
            </LinearLayout>

        </RelativeLayout>

        <!--评论展示-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f2f2f2"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/communitylist_review_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
            <TextView
                android:id="@+id/communitylist_review_text"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="快来评论呀~"
                android:gravity="center"
                android:textSize="12sp"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>