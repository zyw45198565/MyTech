<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#f2f2f2"
    tools:context=".activity.CreateFriendActivity">
    <RelativeLayout
        android:id="@+id/find_group_details_relative"
        android:layout_width="match_parent"
        android:layout_height="273dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@drawable/group_details"
            >
            <ImageView
                android:id="@+id/find_group_details_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/common_nav_btn_back_n_xhdpi"/>
            <TextView
                android:id="@+id/find_group_details_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:text="群名"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="98dp"
                />
        </RelativeLayout>
       
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/find_group_details_icon"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="30dp"
            app:roundedCornerRadius="7dp"
            android:layout_marginBottom="18dp"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/find_group_details_relative"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/find_group_details_group"
            android:layout_width="match_parent"
            android:layout_height="46dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#999999"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:text="群成员"/>
            <TextView
                android:id="@+id/find_group_details_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#999999"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:text="共几人"/>
        </RelativeLayout>
        <View
            android:layout_marginTop="@dimen/dip_10"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="82dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#999999"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="16dp"
                android:text="群简介"/>
            <TextView
                android:id="@+id/find_group_details_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="20dp"
                android:text="群简介"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/find_group_details_yes"
        android:layout_width="336dp"
        android:layout_height="40dp"
        android:layout_marginBottom="40dp"
        android:text="申请加群"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/but_add_shape"
        />
</RelativeLayout>